# Server Configuration
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
NODE_ENV=development

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING

# Database
DATABASE_PATH=./data/premiumgiftbox.db

# WhatsApp Business API Configuration
# Get these from Facebook Business Manager
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_APP_SECRET=your_app_secret
WHATSAPP_VERIFY_TOKEN=premium-gift-box-webhook-token

# Email/SMTP Configuration
# For Gmail: smtp.gmail.com, Port 587
# For Outlook: smtp-mail.outlook.com, Port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@premiumgiftbox.com

# SMS Configuration (Optional - for future implementation)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=PremiumBox

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_FREQUENCY=4
AUTO_BACKUP=true

# Feature Flags
ENABLE_WHATSAPP=true
ENABLE_EMAIL=true
ENABLE_SMS=false
ENABLE_ANALYTICS=true
ENABLE_BACKUP=true
