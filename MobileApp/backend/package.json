{
  "name": "premium-gift-box-backend",
  "version": "1.0.0",
  "description": "Backend API for Premium Gift Box business management",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "init-db": "node src/database/init.js",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles",
    "test:auth": "jest --runInBand tests/auth.test.js",
    "test:customers": "jest --runInBand tests/customers.test.js",
    "test:orders": "jest --runInBand tests/orders.test.js",
    "test:inventory": "jest --runInBand tests/inventory.test.js",
    "test:production": "jest --runInBand tests/production.test.js",
    "test:financial": "jest --runInBand tests/financial.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "gift-box",
    "business-management",
    "inventory",
    "production",
    "self-hosted",
    "indonesian-business",
    "erp",
    "crm"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^6.12.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "nodemailer": "^8.0.1",
    "pdfkit": "^0.13.0",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  }
