# Backend API Configuration
# For development, use your local server IP address
# For Android emulator: http://10.0.2.2:3000/api
# For iOS simulator: http://localhost:3000/api
# For physical device: http://YOUR_COMPUTER_IP:3000/api (e.g., http://192.168.1.100:3000/api)
API_BASE_URL=http://localhost:3000/api

# Business Configuration
# PPN (VAT) Rate - Default is 11% for Indonesia
PPN_RATE=11

# Currency
CURRENCY=IDR
CURRENCY_SYMBOL=Rp

# WhatsApp Country Code (Indonesia)
WHATSAPP_COUNTRY_CODE=62

# App Configuration
APP_NAME=Cardose
APP_VERSION=1.0.0

# Feature Flags (true/false)
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Timeout Configuration (in milliseconds)
API_TIMEOUT=30000
UPLOAD_TIMEOUT=120000

# Sync Configuration
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL=300000

# Debug Mode
DEBUG_MODE=true
ENABLE_REDUX_DEVTOOLS=true
